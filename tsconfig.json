{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/index.ts"
  ]
}
